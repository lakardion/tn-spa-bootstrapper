{
  "name": "Construct Capital LP",
  "env": {
    "SECRET_KEY": {
      "generator": "secret"
    },
    "NPM_CONFIG_PRODUCTION": false,
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    },
    "DEBUG": {
      "value": "True"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql:hobby-dev"
  ],
  "environments": {
    "review": {
      "addons": [
        "heroku-postgresql:hobby-dev"
      ]
    }
  },
  "ENVIRONMENT": {
    "value": "staging"
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ]
}
